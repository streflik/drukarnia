<div class="news">
  <h2>Promocje</h2>
  <ul>
    <% for update in @updates %>
        <li>
          <h3><%= link_to update.title, update %></h3>
          <p class="meta">
            opublikowano: <span><%= update.created_at.strftime("%d.%m.%Y") %></span>
            <% if admin? %>
                | <%= link_to "Edytuj", edit_update_path(update) %>
                | <%= link_to "Usuń", update, :confirm => 'Czy jesteś pewien?', :method => :delete %>
            <% end %>
          </p>
        </li>
    <% end %>

  </ul>
</div>

